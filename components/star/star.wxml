<view class='videoStar'>
  <image style='width:{{starSize}}rpx; height:{{starSize}}rpx' class='starPhoto' wx:for="{{lightArray}}" wx:key="{{index}}" src='/images/rate_light.png'></image>
  <image style='width:{{starSize}}rpx; height:{{starSize}}rpx' class='starPhoto' wx:for="{{halfsArray}}" wx:key="{{index}}" src='/images/rate_half.png'></image>
  <image style='width:{{starSize}}rpx; height:{{starSize}}rpx' class='starPhoto' wx:for="{{grayArray}}" wx:key="{{index}}" src='/images/rate_gray.png'></image>
  <text wx:if="{{starShow}}" class='starText' >{{gradeText}}</text>
</view>